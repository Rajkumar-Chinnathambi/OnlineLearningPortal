@{
    var name = Session["Name"];
    if (name == null)
    {
        name = "Guest";
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/Styles/LogUserNavbar.css")
    <style>
        * {
            font-family: "Poppins",sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="logoBox">
            <img src="https://s.financesonline.com/uploads/2019/12/claysys-logo1.png" />
        </div>
        <ul class="menu">
            <li><a href="~/Home/Index" class="menuItem">All Course</a></li>
            <li><a href="~/Home/Index" class="menuItem">My Course</a></li>
            <li style="text-transform:uppercase;">@name</li>
            <li><a href="~/Home/Index" class="menuItem">Sign Out</a></li>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
