@model IEnumerable<OnlineLearningPortal.Models.CourseModel>
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@Styles.Render("~/Content/Styles/Course.css")

<div class="CoursesContainer">
    <div>
        <div class="createBtnBox">
            <h2>Courses</h2>
            <a href="~/Admin/AddCourse" class="addCourseBtn">Add Course</a>
        </div>
        <table border="2">
            <tr>
                <th>Course</th>
                <th>Course Name</th>
                <th>Course Catagroy</th>
                <th>Course Desc</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
               

                <tr>
                    <td>
                        @{
                            var image64 = Convert.ToBase64String(item.CoursePhoto);
                            var src = string.Format("data:image/gif;base64,{0}", image64);
                        }
                        <img src="@src" class="courseImage" width="100" height="50"/>
                        @*<iframe width="100" height="50" src="@item.Coursesrc"></iframe>*@
                    </td>
                    <td>@item.Coursename</td>
                    <td>@item.CourseCatagory</td>
                    <td>@item.Coursedesc</td>
                    <td>
                        <a href="~/Admin/CourseDetails?CourseID=@item.CourseID"><i class="fa-solid fa-eye"></i></a>
                        <a href="~/Admin/CourseEdit?CourseID=@item.CourseID"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="~/Admin/DeleteCourse?CourseID=@item.CourseID"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>

            }
        </table>
    </div>
</div>