@model IEnumerable<OnlineLearningPortal.Models.PendingCourse>
@{
    ViewBag.Title = "CourseApproval";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .courseApprovalContainer {
        margin: 20px auto; /* Center the table container */
        max-width: 800px; /* Max width for the container */
        border: 1px solid #ddd; /* Border around the container */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        background-color: #f9f9f9; /* Light background color */
        padding: 20px; /* Padding inside the container */
    }

        .courseApprovalContainer table {
            width: 100%; /* Full width */
            border-collapse: collapse; /* Remove gaps between table cells */
            font-family: Arial, sans-serif; /* Font style */
            font-size: 16px; /* Font size */
            color: #333; /* Text color */
        }

        .courseApprovalContainer th,
        .courseApprovalContainer td {
            padding: 12px 15px; /* Cell padding */
            text-align: left; /* Left-align text */
            border-bottom: 1px solid #ddd; /* Bottom border */
        }

        .courseApprovalContainer th {
            background-color: #f0f0f0; /* Background color for header cells */
            font-weight: bold; /* Bold header text */
        }

        .courseApprovalContainer tr:nth-child(even) {
            background-color: #f7f7f7; /* Alternate row background color */
        }

        .courseApprovalContainer tr:hover {
            background-color: #e6f7ff; /* Highlight row on hover */
        }

        .courseApprovalContainer a {
            text-decoration: none; /* Remove underline from links */
            color: #007bff; /* Link color */
            padding: 8px 12px; /* Padding around links */
            border: 1px solid #007bff; /* Border for links */
            border-radius: 5px; /* Rounded corners for links */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition for hover effects */
        }

            .courseApprovalContainer a:hover {
                background-color: #007bff; /* Background color on hover */
                color: #fff; /* Text color on hover */
            }

</style>
<h2>CourseApproval</h2>
<div class="courseApprovalContainer">
    <table>
        <tr>
            <th>User name</th>
            <th>Course</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model) { 
            <tr>
                <td>@item.UserName</td>
                <td>@item.CourseName</td>
                <td>
                    <a href="~/Admin/CourseAcceptOrReject/@item.Id?status=1">Approve</a>
                    <a href="~/Admin/CourseAcceptOrReject/@item.Id?status=0">Reject</a>
                </td>
            </tr>

        }
    </table>
</div>
