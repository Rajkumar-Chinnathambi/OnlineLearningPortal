@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@Styles.Render("~/Content/Styles/Contact.css")
@{
    if (TempData["Message"] != null)
    {
        <script>alert("@TempData["Message"]")</script>
    }
}
<main aria-labelledby="title">
    <div class="contactPageMain">
        <div class="contactContainer">
            <div class="contactAddress">
                <h2>Contact us</h2>
                <h2>We’d love to hear from you</h2>
                <p>
                    If you want to know more about our products, features, pricing or anything at all, we are here to
                    answer your questions.
                </p>
            </div>
            <div class="contactMap">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3916.3923771814684!2d76.94822407452008!3d11.009158754858834!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba859ff537c14fd%3A0x335e73d2c3470cc!2sClaySys%20Technologies!5e0!3m2!1sen!2sin!4v1725523617891!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </div>

        <div class="ContactFormContainer">
            <form class="contactFormBox" action="~/Home/SaveContactForm" method="post">
                <h2>Contact Form</h2>
                <div class="flex">
                    <label>Name</label>
                    <input type="text" name="Name" required/>
                </div>
                <div class="flex">
                    <label>Email</label>
                    <input type="text"  name="Email" required/>
                </div>
                <div class="flex">
                    <label>Country</label>
                    <input type="text" name="Country" required/>
                </div>
                <div class="flex">
                    <label>Message</label>
                    <textarea type="text" name="Message" required></textarea>
                </div>
                <button>Submit</button>
            </form>
        </div>
    </div>
</main>